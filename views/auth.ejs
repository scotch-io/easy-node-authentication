<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <% if (message) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <!-- LOGIN FORM -->
    <form action="<%= action %>" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" id="emailNew">
        </div>
        <% if(action === "signup") { %>
        <div class="form-group">
            <label>Password</label>
            <% include ../static/pages/password.html %>            
        </div>
        <% } else { %>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <% } %>
        <button class="btn btn-primary" 
            onclick="validateCredentials(event)" 
            id="submit_<%= action %>" <%= (action === 'signup' ? 'disabled="disabled"' : '') %></button><%= actionTitle %></button>
        <hr>
        <p><% include ../static/pages/recaptcha.html %><%- include(promptLocation) %></p>
    </form>
</div>
</div>
<script type="text/javascript">

var btn = $('#submit_<%= action %>');

</script>